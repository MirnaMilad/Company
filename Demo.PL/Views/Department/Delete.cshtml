@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure you want to delete @Model.Name department</h1>
<br />

<form asp-action="Delete">
    <div class="form-group">
        <label class="col-form-label" asp-for="Code">

        </label>
        <input readonly class="form-control" asp-for="Code" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name">

        </label>
        <input readonly class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation">

        </label>
        <input readonly class="form-control" asp-for="DateOfCreation" />
    </div>
    <input type="submit" value="Delete" asp-action="Delete" class="btn btn-danger"/>
    <a asp-action="Index" class="btn btn-light"> Cancel </a>
</form>